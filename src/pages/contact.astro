---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="ติดต่อเรา" title="เชื่อมต่อกับเรา!" />

  <ContactUs
    title="ส่งข้อความถึงเราได้เลย!"
    subtitle="หากต้องการคำตอบอย่างรวดเร็ว แนะนำให้ดูที่ส่วนคำถามที่พบบ่อย (FAQs) คุณอาจพบคำตอบที่ต้องการที่นั่น! หากไม่พบ ทีมสนับสนุนของเรายินดีให้ความช่วยเหลือคุณ"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'ชื่อ',
      },
      {
        type: 'email',
        name: 'email',
        label: 'อีเมล',
      },
    ]}
    textarea={{
      label: 'ข้อความ',
    }}
    disclaimer={{
      label:
        'เมื่อส่งแบบฟอร์มนี้ คุณรับทราบและยอมรับการเก็บข้อมูลส่วนบุคคลของคุณ',
    }}
    description="ทีมสนับสนุนของเราจะตอบกลับภายใน 24 ชั่วโมงทำการ"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="เราพร้อมช่วยเหลือคุณ!"
    items={[
      {
        title: 'การสนับสนุนทั่วไป',
        description: `พูดคุยกับเราเกี่ยวกับการจัดการบัญชี การนำทางเว็บไซต์ ปัญหาการชำระเงิน การเข้าถึงเทมเพลตที่ซื้อ หรือคำถามทั่วไปเกี่ยวกับการใช้งานเว็บไซต์`,
      },
      {
        title: 'ติดต่อฝ่ายขาย',
        description:
          'พูดคุยกับเราเกี่ยวกับการซื้อเทมเพลต ตัวเลือกการปรับแต่ง การขอใบอนุญาตสำหรับการใช้งานเชิงพาณิชย์ หรือสอบถามเกี่ยวกับเทมเพลตเฉพาะ',
      },
      {
        title: 'การสนับสนุนด้านเทคนิค',
        description:
          'พูดคุยกับเราเมื่อพบปัญหาในการติดตั้งเทมเพลต ปัญหาในการแก้ไข ความเข้ากันได้กับซอฟต์แวร์ หรือข้อผิดพลาดในการดาวน์โหลด รวมถึงปัญหาทางเทคนิคอื่น ๆ ที่เกี่ยวข้องกับการใช้งานเทมเพลต',
      },
      {
        title: 'โทรศัพท์',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'อีเมล',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'ที่อยู่',
        description: '1234 Lorem Ipsum St, 12345, Miami, สหรัฐอเมริกา',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
